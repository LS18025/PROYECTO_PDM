<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Personaliza los atributos del tema -->
        <item name="android:windowBackground">@drawable/fondo_degradado</item>
        <!-- Otros atributos del tema -->
    </style>

    <style name="EstiloBoton" parent="Widget.AppCompat.Button">
        <item name="android:background">#00FC28</item> <!-- Color de fondo -->
        <item name="android:textColor">#000000</item> <!-- Color de texto -->
    </style>
    <style name="EditTextStyle">
        <item name="android:background">@drawable/esquinas_redondeadas</item>
    </style>
    <style name="titulo">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="descripcion">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44dp</item>
    </style>
    <style name="textNormal">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
