<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.administracion.RegistrarCuenta">

    <TextView
        android:id="@+id/textView13"
        style="@style/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:text="@string/registarUs"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCancelarRegistro"
        android:layout_width="62dp"
        android:layout_height="55dp"
        android:layout_marginTop="93dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_cancelar"
        app:layout_constraintEnd_toStartOf="@+id/btnRegistrarUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <ImageButton
        android:id="@+id/btnRegistrarUsuario"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="84dp"
        android:background="#00FFFFFF"
        android:src="@drawable/baseline_arrow_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/repetirContrasena" />

    <TextView
        android:id="@+id/textView2"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/datosUsuario"
        android:textColor="#2B2727"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView3"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/nombre"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/txtNombre"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="71dp"
        android:text="@string/apellido"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/txtApellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"

        android:text="@string/correo"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"

        android:text="@string/usuario"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/txtUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        style="@style/textNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"

        android:layout_marginTop="71dp"
        android:layout_marginEnd="32dp"
        android:text="@string/contrasena"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/txtContraseña"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        style="@style/textNormal"
        android:layout_width="81dp"
        android:layout_height="29dp"
        android:layout_marginTop="40dp"
        android:text="Rep Contrasena"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/repetirContrasena"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/txtNombre"
        style="@style/EditTextStyle"
        android:layout_width="226dp"
        android:layout_height="34dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtApellido"
        style="@style/EditTextStyle"
        android:layout_width="224dp"
        android:layout_height="36dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtNombre" />

    <EditText
        android:id="@+id/txtUsuario"
        style="@style/EditTextStyle"
        android:layout_width="218dp"
        android:layout_height="34dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/txtContraseña"
        style="@style/EditTextStyle"
        android:layout_width="218dp"
        android:layout_height="34dp"
        android:layout_marginTop="72dp"

        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtUsuario" />

    <EditText
        android:id="@+id/repetirContrasena"
        style="@style/EditTextStyle"
        android:layout_width="219dp"
        android:layout_height="31dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtContraseña" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="221dp"
        android:layout_height="36dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/esquinas_redondeadas"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtApellido" />

</androidx.constraintlayout.widget.ConstraintLayout>